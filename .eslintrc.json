{
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true,
    "jest": true
  },
  "extends": [
    "airbnb-base"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "ignorePatterns": ["jest.config.js", "node_modules/"],
  "rules": {
    "strict": 0,
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "quote-props": ["warn", "consistent-as-needed"],
    "no-console": "off",
    "comma-dangle": ["error", "always-multiline"]
  }
}
